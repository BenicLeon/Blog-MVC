@model Blog.Models.User

@{
    ViewData["Title"] = "Edit User";
}

<div class="container">
    <h2>Edit User</h2>
    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label for="Username">Username:</label>
            <input type="text" class="form-control" asp-for="Username" placeholder="Edit username" />
            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="Password">Password:</label>
            <input type="password" class="form-control" asp-for="Password" placeholder="Enter new password" />
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="Email">Email:</label>
            <input type="email" class="form-control" asp-for="Email" placeholder="Edit email" />
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="@Url.Action("Index", "User")" class="btn btn-secondary ml-2"><i class="bi bi-x-circle-fill"></i></a>
    </form>
</div>
